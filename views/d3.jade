extends layout

block header
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/loader.css')

block content

    a-scene(fog="type: linear; color: #AAB; far: 10; near: 0")
        a-camera(position="0 1.8 0", cursor-visible="true", cursor-scale="2", cursor-color="#4CC3D9", cursor-offset="2", cursor-maxdistance="100", cursor-opacity="0.5", cursor-fuse="true")
        a-light(color="#da47da", position="0 5 0", type="ambient")
        a-entity(camera, look-controls, wasd-controls)
        a-entity(light="type: point; color: #EEE; intensity: 0.5", position="0 3 0")
        a-sky(color="#c8f8e0")

    script(src="js/aframe/_d3.js")
